<% provide(:title, @user.name) %>
<div class="row">
<aside class="col-md-4">
  <section class="user_info">
    <h1>
      <% flash.each do |msg_type, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{msg_type}"%>
      <% end %>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
    <br>
    <%= Time.now %>
  </section>
</aside>
</div>
